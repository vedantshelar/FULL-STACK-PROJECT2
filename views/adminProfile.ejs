                            <a href="/admin/profile/<%-adminInfo._id%>/validateAdminsAccounts" id="eidtProfileBtn">VERIFY ADMIN ACCOUNTS</a>
                        <%}%>
                    </div>
                </div>
            </div>

        </div>
        <script src="https://kit.fontawesome.com/7e49fc305e.js" crossorigin="anonymous"></script>
