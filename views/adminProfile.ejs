</head>

<body>
    <%- include('includes/navbar.ejs') %>
    <%- include('includes/messageBox.ejs') %> 
        <div id="profileMainContainer">
            <div id="profileContainer">
                <div id="profileInfoBox" style="width: 90%;">
                    <p>EMAIL : <%=adminInfo.adminEmail%>
                    </p>
                    <p>MOBILE NO : <%=adminInfo.adminMobileNo%>
                    </p>
